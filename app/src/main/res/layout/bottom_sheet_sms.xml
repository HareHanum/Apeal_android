<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_sms"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bottom_sheet"
    android:orientation="vertical"
    app:behavior_peekHeight="90dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:id="@+id/bottom_sheet_sms_header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/bottom_sheet_header_background"
        android:gravity="center">

        <ImageView
            android:id="@+id/arrow_Btn_sms"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:src="@drawable/arrows" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="bottom_sheet_content"
        android:textColor="@android:color/white" />

</LinearLayout>